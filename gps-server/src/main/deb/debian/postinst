#!/bin/sh
# postinst script for heliotrope
#
# see: dh_installdeb(1)

set -e

. /usr/share/debconf/confmodule

. /usr/share/dbconfig-common/dpkg/postinst 
dbc_generate_include='template:/etc/heliotrope/heliotrope-config.groovy'
dbc_generate_include_perms="755"
dbc_generate_include_owner="root:root"
dbc_generate_include_args="-o template_infile=/etc/heliotrope/heliotrope-config.groovy.template -U"
dbc_go heliotrope $@

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)

    	RET=""
        db_get heliotrope-server/admin_password

        if [ "$RET" != "" ] ; then
            echo Updating administrator password.
            # We should really hash the password instead of storing in clear-text
            #adminpw=`echo -n $RET | sha256sum | cut -d ' ' -f 1`
            adminpw=$RET
            tfile=`mktemp`
	        if [ ! -f "$tfile" ]; then
               return 1
            fi
			cat /etc/heliotrope/shiro.ini | sed \
			  -e "s/^administrator\s*=.*,/administrator=$adminpw,/" \
			  > $tfile && mv $tfile /etc/heliotrope/shiro.ini
        fi

    	# Create heliotrope user if it doesn't exist.
        if ! id heliotrope > /dev/null 2>&1 ; then
            adduser --system --home /var/lib/heliotrope --no-create-home \
				 --disabled-password heliotrope
        fi

        rm -f /usr/share/heliotrope
        ln -s /usr/share/heliotrope-* /usr/share/heliotrope

        if [ ! -e /var/lib/heliotrope/conf ] ; then
          ln -s /etc/heliotrope /var/lib/heliotrope/conf
        fi

        chown -R heliotrope:adm /var/lib/heliotrope /var/log/heliotrope /etc/heliotrope
        chmod -R 750      /var/lib/heliotrope /var/log/heliotrope /etc/heliotrope
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
