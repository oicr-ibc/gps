<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">
<Configure id="FileServer" class="org.obiba.heliotrope.server.httpd.Server">

	<Call name="addConnector">
		<Arg>
			<New class="org.eclipse.jetty.server.nio.SelectChannelConnector">
				<Set name="port">8888</Set>
			</New>
		</Arg>
	</Call>

	<Configure id="webApp" class="org.eclipse.jetty.webapp.WebAppContext">
		<Set name="contextPath">/</Set>
		<Set name="war"><SystemProperty name="HELIOTROPE_DIST" default=".."/>/heliotrope-war-0.0.1-SNAPSHOT.war</Set>
	</Configure>
	
	<Set name="handler"><Ref id="webApp"/></Set>

</Configure>
